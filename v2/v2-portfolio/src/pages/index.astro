---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';

import '@/styles/globals.css'
import '@radix-ui/themes/styles.css';
import { Theme } from '@radix-ui/themes';

import AnimatedPinCard from "@/components/3d-pin";
import { NavBar } from "@/components/NavBar";
import { GridBackgroundDemo } from "@/components/grid-background";
import { GridBackgroundDemo2 } from "@/components/grid";

import { Image } from 'astro:assets';

---
<script is:inline>
	const getThemePreference = () => {
		if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
			return localStorage.getItem('theme');
		}
		return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
	};
	const isDark = getThemePreference() === 'dark';
	document.documentElement.classList[isDark ? 'add' : 'remove']('dark');
 
	if (typeof localStorage !== 'undefined') {
		const observer = new MutationObserver(() => {
			const isDark = document.documentElement.classList.contains('dark');
			localStorage.setItem('theme', isDark ? 'dark' : 'light');
		});
		observer.observe(document.documentElement, { attributes: true, attributeFilter: ['class'] });
	}
</script>


<Theme>
	<Layout title="ryan's homepage" className="bg-zinc-950 dark:bg-white p-4">
		<main>
			<head className="z-999"><NavBar client:load/></head>
			
			
			<body className="z-0 h-96 relative w-full overflow-hidden bg-slate-900 flex flex-col items-center justify-center rounded-lg">
				<GridBackgroundDemo client:load/>

				<GridBackgroundDemo2 client:load/>
				
				<p className="text-4xl sm:text-7xl font-bold relative z-20 bg-clip-text text-transparent bg-gradient-to-b from-neutral-200 to-neutral-500 py-8"> 
					//make this animated or something with logos/icons// created with <span className="text-gradient">astro, typescript, and supabase</span>
				</p>

				//add an about me here


				// add some photos here


				//replace these cards with something animated
				<ul role="list" class="link-card-grid">
					<Card
						href="/resume"
						title="Ryan's Resume"
						body="Here's my resume!"
					/>
