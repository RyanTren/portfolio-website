---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import '@/styles/globals.css'
import '@radix-ui/themes/styles.css';
import { Theme, Grid, Box } from '@radix-ui/themes';

import { NavBar } from '@/components/NavBar';
import { Button} from '@/components/ui/button';
import { BentoGridSecondDemo } from '@/components/bento';
import GitHubAnimatedPinCard from "@/components/3d-pin-github";
---
<script is:inline>
	const getThemePreference = () => {
		if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
			return localStorage.getItem('theme');
		}
		return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
	};
	const isDark = getThemePreference() === 'dark';
	document.documentElement.classList[isDark ? 'add' : 'remove']('dark');
 
	if (typeof localStorage !== 'undefined') {
		const observer = new MutationObserver(() => {
			const isDark = document.documentElement.classList.contains('dark');
			localStorage.setItem('theme', isDark ? 'dark' : 'light');
		});
		observer.observe(document.documentElement, { attributes: true, attributeFilter: ['class'] });
	}
</script>


<Theme>
	<Layout title="ryan's projects">
		
		<main>
			<NavBar client:load />
			
			<h1>Welcome to <span class="text-gradient">Ryan's Projects</span></h1>

			<BentoGridSecondDemo client:load/>

			<div>
				<ul role="list" class="link-card-grid" >
					<GitHubAnimatedPinCard  client:visible />
				</ul>
			</div>
		</main>
	</Layout>
</Theme>
